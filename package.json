{
  "name": "ed-auction-api",
  "version": "1.0.0",
  "description": "Auction site API",
  "main": "index.js",
  "scripts": {
    "start": "nodemon",
    "prestart": "npm run updateProductExpiry",
    "serve": "npm run build && node dist/index.js",
    "build": "node ./node_modules/typescript/bin/tsc",
    "prebuild": "npm run updateProductExpiry && npm run cleanDist",
    "updateProductExpiry": "ts-node ./buildScripts/updateTimeLeft.ts",
    "cleanDist": "rimraf dist && mkdir dist",
    "prestart-ts": "npm run updateProductExpiry",
    "start-ts": "ts-node --project tsconfig.json ./src/index.ts",
    "test": "mocha -r ts-node/register ./src/**/*test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timtam8520/ed-auction-api.git"
  },
  "author": "timtam8520",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/timtam8520/ed-auction-api/issues"
  },
  "homepage": "https://github.com/timtam8520/ed-auction-api#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^5.0.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.1.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
